<div class="row">
    <div class="col-md-12">
        
        <h2 style="display: inline;">Categories</h2>
        <a style="float: right;" href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        <hr />
        <table class="table table-responsive">
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th></th>
            </tr>
            {{#each categories}}
                <tr>
                    <td> <a href="/posts?category={{id}}">{{id}}</a></td>
                    <td> <a href="/posts?category={{id}}">{{category}}</a></td>
                    <td><a href="categories/delete/{{id}}" class="btn btn-danger">Remove</a></td>
                </tr>
            {{/each}}

        </table>
        {{#unless categories}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>